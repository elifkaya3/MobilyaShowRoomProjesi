<div class="container-fluid " >
    <div class="row d-flex justify-content-center">
        @foreach (var product in Model)
        {
            <div class="card col-sm-3 w-33 text-white bg-dark m-3">
                <div class="card-body">
                    <h5 class="card-title">@product.ProductName</h5>
                    <h5 class="card-subtitle mb-2 text-muted">@product.ID</h5>
                    <p class="card-text">@product.ProductDetail</p>
                    <span class="card-text rounded-1 text-warning border border-primary fw-bold text-decoration-line-through">9500</span> <br /><br />
                    <span class="card-text rounded-1 text-warning border border-warning fw-bold">@product.Price</span> <br /><br />
                    <a href="/product/getproductdetail/@product.ID" class="btn btn-primary">Detay..</a>
                    <a href="home" class="btn btn-primary">Home</a>
                </div>
            </div>
        }
    </div>

</div>
